<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Selecedwallpapers"
    android:id="@+id/selected_layout"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_selected"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="475dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn_share_image"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:background="@color/colorLight"
            android:paddingTop="10dp"
            android:drawableTop="@drawable/ic_share_black_36dp"
            />
        <Button
            android:id="@+id/btn_download_image"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:background="@color/colorLight"
            android:paddingTop="10dp"
            android:drawableTop="@drawable/ic_arrow_downward_black_36dp"/>
        <Button
            android:id="@+id/btn_setwallpaer"
            android:layout_width="122dp"
            android:layout_height="60dp"
            android:background="@color/colorLight"
            android:paddingTop="10dp"
            android:drawableTop="@drawable/ic_wallpaper_black_36dp"/>

    </LinearLayout>





</LinearLayout>